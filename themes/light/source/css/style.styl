// 分页导航样式
.pagination-container
  text-align center
  padding 20px 0
  font-family Arial, sans-serif

  .page-number,
  .extend
    display inline-block
    margin 0 5px
    padding 8px 12px
    background-color #f4f4f4
    color #333
    border-radius 4px
    text-decoration none
    transition background-color 0.3s, color 0.3s

    &:hover
      background-color #007bff
      color #fff

  .current
    background-color #007bff
    color #fff

  .space
    margin 0 5px

  .extend
    font-weight bold